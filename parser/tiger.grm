%%
%term
    EOF 
  | ID of string
  | INT of int | STRING of string 
  | COMMA | COLON | SEMICOLON | LPAREN | RPAREN | LBRACK | RBRACK 
  | LBRACE | RBRACE | DOT 
  | PLUS | MINUS | TIMES | DIVIDE | EQ | NEQ | LT | LE | GT | GE
  | AND | OR | ASSIGN
  | ARRAY | IF | THEN | ELSE | WHILE | FOR | TO | DO | LET | IN | END | OF 
  | BREAK | NIL
  | FUNCTION | VAR | TYPE
  | UMINUS | LOWERTHANOPHACK

%nonterm  program | expr
	| lvalue | valuelessExpr | exprSeq | noval | funcall | funparam
	| record | recordFields | array
	| decs | tydec | ty | tyfields | vardec | fundec
	  

%pos int
%verbose
%start program
%eop EOF
%noshift EOF

		(* Define associativity and precedence *)
(* %nonassoc ASSIGN DO OF *)
(* %nonassoc ELSE *)
(* %nonassoc THEN *)
%nonassoc LOWERTHANOPHACK
%nonassoc ASSIGN
%left OR
%left AND
%nonassoc EQ NEQ LT LE GT GE
%left MINUS PLUS
%left TIMES DIVIDE
%left UMINUS

%name Tiger

%keyword WHILE FOR TO BREAK LET IN END FUNCTION VAR TYPE ARRAY IF THEN ELSE DO OF NIL

%prefer THEN ELSE LPAREN

%value ID ("bogus")
%value INT (1)
%value STRING ("")

%%

program	: expr   (print("always print this\n"))

expr : lvalue ()
		(* NilExp, IntExp, StringExp, CallExp *)
     | NIL ()
     | INT (print(","^Int.toString(INT)^","))
     | STRING (print(","^STRING^","))
     | ID LPAREN funparam RPAREN (print("funcall:"^ID^"\n"))
		(* OpExp *)
     | MINUS expr   %prec UMINUS (print("Unary minus\n"))
     | expr TIMES expr (print("TIMES\n"))
     | expr PLUS expr (print("PLUS\n"))
     | expr MINUS expr (print("MINUS\n"))
     | expr DIVIDE expr (print("ope\n"))
     | expr EQ expr (print("ope\n"))
     | expr NEQ expr (print("ope\n"))
     | expr LT expr (print("LT\n"))
     | expr LE expr (print("LE\n"))
     | expr GT expr (print("GT\n"))
     | expr GE expr (print("GE\n"))
     | expr AND expr (print("AND\n"))
     | expr OR expr (print("OR\n"))
		(* RecordExp, SeqExp, AssingExp *)
     | record (print("record\n"))
     | LPAREN RPAREN ()
     | LPAREN expr RPAREN ()
     | LPAREN exprSeq RPAREN ()
     | lvalue ASSIGN expr ()
		(* IfExp, WhileExp, ForExp, BreakExp *)
     | IF expr THEN expr %prec LOWERTHANOPHACK (print("if--then\n"))
     | IF expr THEN expr ELSE expr %prec LOWERTHANOPHACK (print("if--then--else\n"))
     | WHILE expr DO expr %prec LOWERTHANOPHACK (print("while--do\n"))
     | FOR ID ASSIGN expr TO expr DO expr %prec LOWERTHANOPHACK (print("for"^ID^"\n"))
     | BREAK ()
		(* LetExp *)
     | LET decs IN END (print("expr -> LET with 0 expr\n"))
     | LET decs IN expr END (print("expr -> LET with 1 expr\n"))
     | LET decs IN exprSeq END (print("expr -> LET with exprSeq\n"))
		(* ArrayExp *)
     | ID LBRACK expr RBRACK OF expr %prec LOWERTHANOPHACK ()
	  
(* SimpleVar, FieldVar, SubscriptVar *)
lvalue : ID (print(ID))
       | lvalue DOT ID ()
       | ID LBRACK expr RBRACK ()
       | lvalue LBRACK expr RBRACK ()

(* Helper for SeqExp *)
exprSeq : expr SEMICOLON expr ()
	| exprSeq SEMICOLON expr ()
		
(* Helper for CallExp *)
funparam : 			(* empty call *) ()
	| expr ()
	| funparam COMMA expr ()

(* Helper for RecordExp *)
record : ID LBRACE RBRACE ()
       | ID LBRACE recordFields RBRACE  ()

(* Helper for record *)
recordFields : ID EQ expr ()
	     | ID EQ expr COMMA recordFields ()


(* Decs *)
decs: 			()	(* empty *)
    | tydec decs ()
    | vardec decs ()
    | fundec decs ()
	  
(* TypeDec: helper for decs *)
tydec : TYPE ID EQ ty ()

(* Ty, Helper for TypeDec. NameTy, RecordTy, ArrayTy *)
ty : ID ()
   | LBRACE tyfields RBRACE ()
   | ARRAY OF ID ()

(* Helper for Ty. *)
tyfields :	 ()		(* epsilon *)
   | ID COLON ID  ()
   | tyfields COMMA ID COLON ID  ()

(* FunctionDec, helper for Dec(s) *)
fundec : FUNCTION ID LPAREN tyfields RPAREN EQ expr ()
       | FUNCTION ID LPAREN tyfields RPAREN COLON ID EQ expr ()

(* VarDec, a helper for Dec(s) *)
vardec : VAR ID ASSIGN expr ()
       | VAR ID COLON ID ASSIGN expr ()

